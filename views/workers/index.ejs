<% include ../partials/header %>

<style>
body {
    background-color : #ffff;
}
    .thumbnail{
        padding:0;
        border:0;
        margin:0;
        flex : 100%;
    }
    
    
    .card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 100%;
  border-radius: 5px;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

img {
  border-radius: 5px 5px 0 0;
}

.container {
  padding: 2px 16px;
}
    
</style>


<div class="container">
    <div class="row">
        
         
           <% workers.forEach(function(worker){ %>
            <div class="col-md-3">
            
                    <a href="workers/<%=worker._id%>">
                    <div class="card">
                        <img src="https://content-static.upwork.com/uploads/2014/10/02123010/profilephoto_goodcrop.jpg" alt="Avatar" style="width:100%">
                     <div class="container">
                <h4><b><%=worker.name%></b></h4> 
                 <p><%=worker.location%></p> 
                     </div>
                    </div>
                    </a>
                
                
                
                
                
                </div>
            <% }); %>
            
    
    </div>
</div>









<% include ../partials/footer %>